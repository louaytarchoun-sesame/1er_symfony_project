<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Auth - Gestionnaire médical{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    {% block stylesheets %}{% endblock %}
    {% block importmap %}{{ importmap('app') }}{% endblock %}
  </head>
  <body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
      <div class="container">
        <a class="navbar-brand fw-bold" href="{{ path('home') }}">Gestionnaire médical</a>
        <div class="d-flex ms-auto gap-2">
          <a class="btn btn-outline-primary" href="{{ path('app_login') }}">Login</a>
          <a class="btn btn-primary" href="{{ path('app_register') }}">Sign up</a>
        </div>
      </div>
    </nav>

    <main class="container py-5">
      {% block body %}{% endblock %}
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    {% block javascripts %}{% endblock %}
  </body>
</html>
