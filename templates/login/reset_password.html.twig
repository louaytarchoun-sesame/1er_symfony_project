{% extends 'base_auth.html.twig' %}

{% block title %}Nouveau mot de passe - MedGestion{% endblock %}

{% block stylesheets %}
<style>
  .reset-wrapper {
    min-height: calc(100vh - 80px);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .reset-card {
    border: none;
    border-radius: 1.2rem;
    overflow: hidden;
    max-width: 500px;
    width: 100%;
  }
  .reset-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: #fff;
    padding: 2.5rem 2rem;
    text-align: center;
  }
  .reset-header-icon {
    width: 70px; height: 70px;
    background: rgba(255,255,255,.15);
    border-radius: 1.2rem;
    display: inline-flex; align-items: center; justify-content: center;
    font-size: 2rem;
    margin-bottom: 1rem;
  }
  .reset-form { padding: 2.5rem; }
  .form-control:focus {
    border-color: #667eea;
    box-shadow: 0 0 0 .2rem rgba(102,126,234,.2);
  }
  .btn-gradient {
    background: linear-gradient(135deg, #667eea, #764ba2);
    border: none; color: #fff;
    border-radius: .6rem;
    padding: .6rem;
    font-weight: 600;
    transition: opacity .2s;
  }
  .btn-gradient:hover { opacity: .9; color: #fff; }
</style>
{% endblock %}

{% block body %}
<div class="reset-wrapper">
  <div class="card reset-card shadow-lg">

    <div class="reset-header">
      <div class="reset-header-icon"><i class="bi bi-shield-lock-fill"></i></div>
      <h3 class="fw-bold mb-1">Nouveau mot de passe</h3>
      <p class="opacity-75 mb-0">Choisissez un nouveau mot de passe sécurisé</p>
    </div>

    <div class="reset-form">
      {% for label, messages in app.flashes %}
        {% for msg in messages %}
          <div class="alert alert-{{ label }} alert-dismissible fade show py-2" role="alert">
            {{ msg }}
            <button type="button" class="btn-close btn-sm" data-bs-dismiss="alert"></button>
          </div>
        {% endfor %}
      {% endfor %}

      <form method="post" action="{{ path('app_reset_password', {token: token}) }}">
        <div class="mb-3">
          <label class="form-label fw-semibold"><i class="bi bi-lock me-1"></i>Nouveau mot de passe</label>
          <div class="input-group">
            <input name="password" type="password" class="form-control form-control-lg" id="resetPassword"
                   placeholder="Minimum 6 caractères" required minlength="6">
            <button class="btn btn-outline-secondary" type="button"
                    onclick="let i=document.getElementById('resetPassword'),ic=this.querySelector('i');if(i.type==='password'){i.type='text';ic.classList.replace('bi-eye','bi-eye-slash')}else{i.type='password';ic.classList.replace('bi-eye-slash','bi-eye')}">
              <i class="bi bi-eye"></i>
            </button>
          </div>
        </div>
        <div class="mb-4">
          <label class="form-label fw-semibold"><i class="bi bi-lock-fill me-1"></i>Confirmer le mot de passe</label>
          <div class="input-group">
            <input name="password_confirm" type="password" class="form-control form-control-lg" id="resetPasswordConfirm"
                   placeholder="Retapez le mot de passe" required minlength="6">
            <button class="btn btn-outline-secondary" type="button"
                    onclick="let i=document.getElementById('resetPasswordConfirm'),ic=this.querySelector('i');if(i.type==='password'){i.type='text';ic.classList.replace('bi-eye','bi-eye-slash')}else{i.type='password';ic.classList.replace('bi-eye-slash','bi-eye')}">
              <i class="bi bi-eye"></i>
            </button>
          </div>
        </div>
        <div class="d-grid mb-3">
          <button class="btn btn-gradient btn-lg">
            <i class="bi bi-check-circle me-1"></i>Réinitialiser le mot de passe
          </button>
        </div>
      </form>

      <div class="text-center">
        <a href="{{ path('app_login') }}" class="text-decoration-none fw-semibold" style="color:#667eea;">
          <i class="bi bi-arrow-left me-1"></i>Retour à la connexion
        </a>
      </div>
    </div>

  </div>
</div>
{% endblock %}
