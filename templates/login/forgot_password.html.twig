{% extends 'base_auth.html.twig' %}

{% block title %}Mot de passe oublié - MedGestion{% endblock %}

{% block stylesheets %}
<style>
  .forgot-wrapper {
    min-height: calc(100vh - 80px);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .forgot-card {
    border: none;
    border-radius: 1.2rem;
    overflow: hidden;
    max-width: 500px;
    width: 100%;
  }
  .forgot-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: #fff;
    padding: 2.5rem 2rem;
    text-align: center;
  }
  .forgot-header-icon {
    width: 70px; height: 70px;
    background: rgba(255,255,255,.15);
    border-radius: 1.2rem;
    display: inline-flex; align-items: center; justify-content: center;
    font-size: 2rem;
    margin-bottom: 1rem;
  }
  .forgot-form { padding: 2.5rem; }
  .form-control:focus {
    border-color: #667eea;
    box-shadow: 0 0 0 .2rem rgba(102,126,234,.2);
  }
  .btn-gradient {
    background: linear-gradient(135deg, #667eea, #764ba2);
    border: none; color: #fff;
    border-radius: .6rem;
    padding: .6rem;
    font-weight: 600;
    transition: opacity .2s;
  }
  .btn-gradient:hover { opacity: .9; color: #fff; }
</style>
{% endblock %}

{% block body %}
<div class="forgot-wrapper">
  <div class="card forgot-card shadow-lg">

    <div class="forgot-header">
      <div class="forgot-header-icon"><i class="bi bi-envelope-paper-fill"></i></div>
      <h3 class="fw-bold mb-1">Mot de passe oublié ?</h3>
      <p class="opacity-75 mb-0">Entrez votre e-mail pour recevoir un lien de réinitialisation</p>
    </div>

    <div class="forgot-form">
      {% for label, messages in app.flashes %}
        {% for msg in messages %}
          <div class="alert alert-{{ label }} alert-dismissible fade show py-2" role="alert">
            {{ msg }}
            <button type="button" class="btn-close btn-sm" data-bs-dismiss="alert"></button>
          </div>
        {% endfor %}
      {% endfor %}

      <form method="post" action="{{ path('app_forgot_password') }}">
        <div class="mb-4">
          <label class="form-label fw-semibold"><i class="bi bi-envelope me-1"></i>Adresse e-mail</label>
          <input name="email" type="email" class="form-control form-control-lg" placeholder="exemple@mail.com" required autofocus>
          <div class="form-text">Nous enverrons un lien de réinitialisation à cette adresse.</div>
        </div>
        <div class="d-grid mb-3">
          <button class="btn btn-gradient btn-lg">
            <i class="bi bi-send me-1"></i>Envoyer le lien
          </button>
        </div>
      </form>

      <div class="text-center">
        <a href="{{ path('app_login') }}" class="text-decoration-none fw-semibold" style="color:#667eea;">
          <i class="bi bi-arrow-left me-1"></i>Retour à la connexion
        </a>
      </div>
    </div>

  </div>
</div>
{% endblock %}
