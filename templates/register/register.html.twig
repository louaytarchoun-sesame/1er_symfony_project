{% extends 'base_auth.html.twig' %}

{% block title %}Sign up{% endblock %}

{% block stylesheets %}
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-sm">
        <div class="card-body">
          <h3 class="card-title mb-4">Sign Up</h3>
          <form id="signupForm" method="post" action="{{ path('app_register') }}" enctype="multipart/form-data">
            {% for label, messages in app.flashes %}
              {% for msg in messages %}
                <div class="alert alert-{{ label }}">{{ msg }}</div>
              {% endfor %}
            {% endfor %}
            <div class="mb-3">
              <label class="form-label">Role (inferred)</label>
              <div id="inferredRole" class="form-control">Patient</div>
            </div>

            <hr>
            <h5>Profil</h5>
            <div class="row g-3 mb-3">
              <div class="col-md-6">
                <label class="form-label">CIN</label>
                <input name="cin" type="text" class="form-control" maxlength="8">
              </div>
              <div class="col-md-6">
                <label class="form-label">Telephone</label>
                <input name="tel" type="text" class="form-control" maxlength="8">
              </div>
              <div class="col-md-6">
                <label class="form-label">First name</label>
                <input name="name" type="text" class="form-control">
              </div>
              <div class="col-md-6">
                <label class="form-label">Last name</label>
                <input name="last_name" type="text" class="form-control">
              </div>
              <div class="col-md-6">
                <label class="form-label">Sexe</label>
                <select name="sexe" class="form-select">
                  <option value="M">M</option>
                  <option value="F">F</option>
                </select>
              </div>
              <div class="col-md-6">
                <label class="form-label">Password</label>
                <input name="password" type="password" class="form-control" required>
              </div>
              <div class="col-md-6">
                <label class="form-label">Date de naissance</label>
                <input id="dobInput" name="date_naissance" type="date" class="form-control" required>
              </div>
              <div class="col-md-6">
                <label class="form-label">Profil Image</label>
                <input name="image" type="file" accept="image/*" class="form-control">
              </div>
            </div>

            <div id="medecinSection" style="display:none;">
              <hr>
              <h5>Medecin</h5>
              <div class="mb-3">
                <label class="form-label">Date d'embauche</label>
                <input name="date_embauche" type="date" class="form-control">
              </div>
              <div class="mb-3">
                <label class="form-label">Specialité</label>
                <select name="specialite_id" class="form-select">
                  <option value="">-- Select Specialité --</option>
                  {% for s in specialites %}
                    <option value="{{ s.id }}">{{ s.labelle }}</option>
                  {% else %}
                    <option value="">(no specialities)</option>
                  {% endfor %}
                </select>
              </div>
            </div>

            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-primary">Sign up</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  {% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      const dobInput = document.getElementById('dobInput');
      const inferredRole = document.getElementById('inferredRole');
      const medecinSection = document.getElementById('medecinSection');

      function computeRole() {
        if (!dobInput || !dobInput.value) {
          inferredRole.textContent = 'Patient';
          medecinSection.style.display = 'none';
          return;
        }
        const dob = new Date(dobInput.value);
        const today = new Date();
        let age = today.getFullYear() - dob.getFullYear();
        const m = today.getMonth() - dob.getMonth();
        if (m < 0 || (m === 0 && today.getDate() < dob.getDate())) {
          age--;
        }
        const role = age >= 25 ? 'Medecin' : 'Patient';
        inferredRole.textContent = role;
        medecinSection.style.display = age >= 25 ? '' : 'none';
      }

      if (dobInput) {
        dobInput.addEventListener('change', computeRole);
        computeRole();
      }
    </script>
  {% endblock %}
{% endblock %}
