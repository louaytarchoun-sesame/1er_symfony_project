{% extends 'base_auth.html.twig' %}

{% block title %}Créer un compte - MedGestion{% endblock %}

{% block stylesheets %}
<style>
  .register-wrapper {
    min-height: calc(100vh - 80px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 0;
  }
  .register-card {
    border: none;
    border-radius: 1.2rem;
    overflow: hidden;
    max-width: 1000px;
    width: 100%;
  }
  .register-brand {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 3rem 2rem;
    text-align: center;
    position: relative;
    overflow: hidden;
  }
  .register-brand::after {
    content: '';
    position: absolute;
    bottom: -30%; left: -20%;
    width: 300px; height: 300px;
    background: rgba(255,255,255,.06);
    border-radius: 50%;
  }
  .register-brand-icon {
    width: 80px; height: 80px;
    background: rgba(255,255,255,.15);
    border-radius: 1.2rem;
    display: flex; align-items: center; justify-content: center;
    font-size: 2.4rem;
    margin-bottom: 1.2rem;
  }
  .register-form { padding: 2.5rem; }
  .form-control:focus, .form-select:focus {
    border-color: #667eea;
    box-shadow: 0 0 0 .2rem rgba(102,126,234,.2);
  }
  .btn-gradient {
    background: linear-gradient(135deg, #667eea, #764ba2);
    border: none; color: #fff;
    border-radius: .6rem;
    padding: .6rem;
    font-weight: 600;
    transition: opacity .2s;
  }
  .btn-gradient:hover { opacity: .9; color: #fff; }
  .section-divider {
    display: flex; align-items: center; gap: .75rem;
    margin: 1.5rem 0 1rem;
    font-weight: 600; color: #667eea;
  }
  .section-divider::after {
    content: '';
    flex: 1;
    height: 1px;
    background: linear-gradient(to right, #667eea33, transparent);
  }
  .role-option {
    cursor: pointer;
    border: 2px solid #dee2e6;
    border-radius: .8rem;
    padding: 1rem;
    text-align: center;
    transition: all .2s;
    flex: 1;
  }
  .role-option:hover { border-color: #667eea; }
  .role-option.active { border-color: #667eea; background: rgba(102,126,234,.06); }
  .role-option i { font-size: 1.8rem; display: block; margin-bottom: .4rem; }
</style>
{% endblock %}

{% block body %}
<div class="register-wrapper">
  <div class="card register-card shadow-lg">
    <div class="row g-0">

      {# Left branded panel #}
      <div class="col-lg-4 register-brand d-none d-lg-flex">
        <div class="register-brand-icon"><i class="bi bi-heart-pulse-fill"></i></div>
        <h3 class="fw-bold mb-2">MedGestion</h3>
        <p class="opacity-75 mb-4">Rejoignez notre plateforme de gestion médicale</p>
        <ul class="list-unstyled text-start opacity-75 small">
          <li class="mb-2"><i class="bi bi-check-circle-fill me-2"></i>Prise de rendez-vous en ligne</li>
          <li class="mb-2"><i class="bi bi-check-circle-fill me-2"></i>Suivi de vos consultations</li>
          <li class="mb-2"><i class="bi bi-check-circle-fill me-2"></i>Profil sécurisé</li>
          <li class="mb-2"><i class="bi bi-check-circle-fill me-2"></i>100% gratuit pour les patients</li>
        </ul>
        <div class="mt-auto">
          <small class="opacity-50">Déjà inscrit ?</small><br>
          <a href="{{ path('app_login') }}" class="btn btn-outline-light btn-sm rounded-pill mt-2 px-4">
            <i class="bi bi-box-arrow-in-right me-1"></i>Se connecter
          </a>
        </div>
      </div>

      {# Right form #}
      <div class="col-lg-8">
        <div class="register-form">
          <h3 class="fw-bold mb-1">Créer un compte</h3>
          <p class="text-muted mb-3">Remplissez le formulaire pour commencer</p>

          {% for label, messages in app.flashes %}
            {% for msg in messages %}
              <div class="alert alert-{{ label }} alert-dismissible fade show py-2" role="alert">
                {{ msg }}
                <button type="button" class="btn-close btn-sm" data-bs-dismiss="alert"></button>
              </div>
            {% endfor %}
          {% endfor %}

          <form id="signupForm" method="post" action="{{ path('app_register') }}" enctype="multipart/form-data">

            {# Role selection #}
            <div class="mb-3">
              <label class="form-label fw-semibold mb-2">Je suis</label>
              <div class="d-flex gap-3">
                <div class="role-option active" id="rolePatient" onclick="selectRole('PATIENT')">
                  <i class="bi bi-person-fill text-primary"></i>
                  <span class="fw-semibold">Patient</span>
                </div>
                <div class="role-option" id="roleMedecin" onclick="selectRole('MEDECIN')">
                  <i class="bi bi-heart-pulse text-success"></i>
                  <span class="fw-semibold">Médecin</span>
                </div>
              </div>
              <select id="roleSelect" name="role" class="d-none">
                <option value="PATIENT" selected>Patient</option>
                <option value="MEDECIN">Medecin</option>
              </select>
            </div>

            {# Profile fields #}
            <div class="section-divider"><i class="bi bi-person-badge me-1"></i>Informations personnelles</div>
            <div class="row g-3 mb-3">
              <div class="col-md-6">
                <label class="form-label fw-semibold"><i class="bi bi-person-vcard me-1"></i>CIN</label>
                <input name="cin" type="text" class="form-control" maxlength="8" placeholder="12345678" required>
              </div>
              <div class="col-md-6">
                <label class="form-label fw-semibold"><i class="bi bi-telephone me-1"></i>Téléphone</label>
                <input name="tel" type="text" class="form-control" maxlength="8" placeholder="12345678" required>
              </div>
              <div class="col-md-6">
                <label class="form-label fw-semibold"><i class="bi bi-envelope me-1"></i>Email</label>
                <input name="email" type="email" class="form-control" placeholder="exemple@mail.com">
              </div>
              <div class="col-md-6">
                <label class="form-label fw-semibold">Nom</label>
                <input name="name" type="text" class="form-control" placeholder="Votre nom" required>
              </div>
              <div class="col-md-6">
                <label class="form-label fw-semibold">Prénom</label>
                <input name="last_name" type="text" class="form-control" placeholder="Votre prénom" required>
              </div>
              <div class="col-md-4">
                <label class="form-label fw-semibold">Sexe</label>
                <select name="sexe" class="form-select">
                  <option value="M">Masculin</option>
                  <option value="F">Féminin</option>
                </select>
              </div>
              <div class="col-md-8">
                <label class="form-label fw-semibold"><i class="bi bi-calendar-event me-1"></i>Date de naissance</label>
                <input id="dobInput" name="date_naissance" type="date" class="form-control">
              </div>
              <div class="col-md-12">
                <label class="form-label fw-semibold"><i class="bi bi-image me-1"></i>Photo de profil</label>
                <input name="image" type="file" accept="image/*" class="form-control">
              </div>
            </div>

            {# Password #}
            <div class="section-divider"><i class="bi bi-shield-lock me-1"></i>Sécurité</div>
            <div class="row g-3 mb-3">
              <div class="col-md-12">
                <label class="form-label fw-semibold"><i class="bi bi-lock me-1"></i>Mot de passe</label>
                <div class="input-group">
                  <input name="password" type="password" class="form-control" id="regPassword"
                         placeholder="Minimum 6 caractères" required minlength="6">
                  <button class="btn btn-outline-secondary" type="button"
                          onclick="let i=document.getElementById('regPassword'),ic=this.querySelector('i');if(i.type==='password'){i.type='text';ic.classList.replace('bi-eye','bi-eye-slash')}else{i.type='password';ic.classList.replace('bi-eye-slash','bi-eye')}">
                    <i class="bi bi-eye"></i>
                  </button>
                </div>
              </div>
            </div>

            {# Medecin extra fields #}
            <div id="medecinSection" style="display:none;">
              <div class="section-divider"><i class="bi bi-hospital me-1"></i>Informations médecin</div>
              <div class="row g-3 mb-3">
                <div class="col-md-6">
                  <label class="form-label fw-semibold">Date d'embauche</label>
                  <input name="date_embauche" type="date" class="form-control">
                </div>
                <div class="col-md-6">
                  <label class="form-label fw-semibold">Spécialité</label>
                  <select name="specialite_id" class="form-select">
                    <option value="">-- Sélectionner --</option>
                    {% for s in specialites %}
                      <option value="{{ s.id }}">{{ s.labelle }}</option>
                    {% else %}
                      <option value="">(Aucune spécialité)</option>
                    {% endfor %}
                  </select>
                </div>
              </div>
            </div>

            <div class="d-grid mt-4">
              <button type="submit" class="btn btn-gradient btn-lg">
                <i class="bi bi-person-plus me-1"></i>Créer mon compte
              </button>
            </div>
          </form>

          <p class="text-center text-muted mt-3 mb-0 d-lg-none">
            Déjà inscrit ?
            <a href="{{ path('app_login') }}" class="fw-semibold" style="color:#667eea;">Se connecter</a>
          </p>
        </div>
      </div>

    </div>
  </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
  function selectRole(role) {
    document.getElementById('roleSelect').value = role;
    document.getElementById('rolePatient').classList.toggle('active', role === 'PATIENT');
    document.getElementById('roleMedecin').classList.toggle('active', role === 'MEDECIN');
    document.getElementById('medecinSection').style.display = role === 'MEDECIN' ? '' : 'none';
  }
</script>
{% endblock %}
