{% extends 'dashboard/layout.html.twig' %}

{% block title %}Mes Patients - Espace Médecin{% endblock %}

{% block sidebar %}
    {% include 'dashboard/medecin/_sidebar.html.twig' %}
{% endblock %}

{% block stylesheets %}
<style>
    .patient-row { cursor: pointer; transition: background .15s; }
    .patient-row:hover td { background: rgba(102,126,234,.08); }

    /* Blurred backdrop */
    .modal-backdrop.show { backdrop-filter: blur(6px); -webkit-backdrop-filter: blur(6px); background-color: rgba(0,0,0,.35) !important; }

    #patientModal .modal-header { background: linear-gradient(135deg,#667eea 0%,#764ba2 100%); color:#fff; border-radius: .5rem .5rem 0 0; }
    #patientModal .modal-content { border-radius: .5rem; overflow: hidden; }
    .detail-label { font-weight:600; color:#555; font-size:.85rem; }
    .profile-avatar { width:90px; height:90px; object-fit:cover; border:3px solid #667eea; box-shadow: 0 2px 12px rgba(102,126,234,.25); }

    /* RDV cards */
    .rdv-cards-container { max-height: 380px; overflow-y: auto; padding-right: 4px; }
    .rdv-cards-container::-webkit-scrollbar { width: 5px; }
    .rdv-cards-container::-webkit-scrollbar-thumb { background: #c5c5c5; border-radius: 4px; }

    .rdv-card { border-left: 4px solid #667eea; border-radius: .45rem; background: #f8f9fa; transition: box-shadow .15s, transform .15s; }
    .rdv-card:hover { box-shadow: 0 4px 16px rgba(102,126,234,.15); transform: translateY(-1px); }
    .rdv-card .rdv-date { font-weight: 700; color: #667eea; font-size: .95rem; }
    .rdv-card .rdv-motif { color: #444; font-size: .9rem; }
    .rdv-card .badge { font-size: .78rem; }

    .rdv-card-valide   { border-left-color: #198754; }
    .rdv-card-refuse    { border-left-color: #dc3545; }
    .rdv-card-attente   { border-left-color: #ffc107; }
</style>
{% endblock %}

{% block dashboard_content %}
<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h2 class="fw-bold mb-0"><i class="bi bi-people-fill me-2 text-primary"></i>Mes Patients</h2>
        <p class="text-muted mb-0">Liste de vos patients</p>
    </div>
</div>

<div class="card shadow-sm border-0 mb-4">
    <div class="card-body py-3">
        <div class="input-group" style="max-width:400px;">
            <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
            <input type="text" id="searchInput" placeholder="CIN, Nom, Prénom ou Email"
                   value="{{ search ?? '' }}" class="form-control border-start-0"
                   autocomplete="off">
        </div>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-header bg-white py-3 fw-semibold d-flex justify-content-between align-items-center">
        <span><i class="bi bi-table me-1"></i>Patients</span>
        <span id="countBadge" class="badge bg-primary">{{ patients|length }}</span>
    </div>
    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0" id="patientsTable">
            <thead class="table-light">
                <tr>
                    <th>Patient</th>
                    <th>CIN</th>
                    <th>Email</th>
                    <th class="text-center">Nb RDV avec moi</th>
                </tr>
            </thead>
            <tbody>
                {% for patient in patients %}
                <tr class="patient-row"
                    data-id="{{ patient.id }}"
                    data-search="{{ (patient.name ~ ' ' ~ patient.last_name ~ ' ' ~ patient.cin ~ ' ' ~ (patient.email ?? ''))|lower }}"
                    onclick="openPatientModal({{ patient.id }},'{{ patient.name|e('js') }}','{{ patient.last_name|e('js') }}')">
                        <td>
                            <img src="https://ui-avatars.com/api/?name={{ patient.name|url_encode }}+{{ patient.last_name|url_encode }}&background=667eea&color=fff&size=36"
                                 alt="Avatar" class="rounded-circle me-2" style="width:36px;height:36px;">
                            <span class="fw-semibold">{{ patient.name }} {{ patient.last_name }}</span>
                        </td>
                        <td class="text-muted">{{ patient.cin }}</td>
                        <td class="text-muted">{{ patient.email ?? '—' }}</td>
                        <td class="text-center">
                            <span class="badge bg-primary-subtle text-primary border border-primary-subtle">{{ patient.nbRdv }}</span>
                        </td>
                    </tr>
                {% else %}
                    <tr id="emptyRow">
                        <td colspan="4" class="text-center text-muted py-4">
                            <i class="bi bi-inbox fs-2 d-block mb-2"></i>Aucun patient trouvé.
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <p id="noResults" class="text-center text-muted py-3 d-none">Aucun résultat pour cette recherche.</p>
    </div>
</div>

{# ── Patient detail modal ── #}
<div class="modal fade" id="patientModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content border-0 shadow">
      <div class="modal-header">
        <h5 class="modal-title"><i class="bi bi-person-badge me-2"></i>Détails du patient</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">

        {# ── Patient info section ── #}
        <div class="d-flex align-items-center gap-4 mb-4">
          <img id="modalAvatar" src="" alt="avatar" class="rounded-circle profile-avatar">
          <div>
            <h4 id="modalFullName" class="fw-bold mb-1"></h4>
            <p class="text-muted mb-0" id="modalCin"></p>
          </div>
        </div>

        <div class="row g-3 mb-4">
          <div class="col-md-6 col-lg-3">
            <div class="p-2 rounded bg-light">
              <span class="detail-label"><i class="bi bi-envelope me-1"></i>Email</span><br>
              <span id="modalEmail" class="text-muted"></span>
            </div>
          </div>
          <div class="col-md-6 col-lg-3">
            <div class="p-2 rounded bg-light">
              <span class="detail-label"><i class="bi bi-telephone me-1"></i>Téléphone</span><br>
              <span id="modalTel" class="text-muted"></span>
            </div>
          </div>
          <div class="col-md-6 col-lg-3">
            <div class="p-2 rounded bg-light">
              <span class="detail-label"><i class="bi bi-gender-ambiguous me-1"></i>Sexe</span><br>
              <span id="modalSexe" class="text-muted"></span>
            </div>
          </div>
          <div class="col-md-6 col-lg-3">
            <div class="p-2 rounded bg-light">
              <span class="detail-label"><i class="bi bi-calendar3 me-1"></i>Date de naissance</span><br>
              <span id="modalDob" class="text-muted"></span>
            </div>
          </div>
        </div>

        <hr>

        {# ── RDV cards section ── #}
        <div class="d-flex align-items-center justify-content-between mb-3">
          <h6 class="fw-bold mb-0"><i class="bi bi-calendar-event me-1"></i>Rendez-vous avec moi</h6>
          <span id="rdvCountBadge" class="badge bg-primary">0</span>
        </div>
        <div id="modalRdvsContainer" class="rdv-cards-container">
          <p class="text-muted text-center">Chargement...</p>
        </div>

      </div>
    </div>
  </div>
</div>

{% endblock %}

{% block javascripts %}
<script>
const patientModal = new bootstrap.Modal(document.getElementById('patientModal'));
const DETAIL_URL = '{{ path('medecin_patient_detail', {id: '__ID__'}) }}';

function openPatientModal(id, name, lastName) {
    // Reset placeholders
    document.getElementById('modalAvatar').src = 'https://ui-avatars.com/api/?name=' + encodeURIComponent(name + ' ' + lastName) + '&background=667eea&color=fff&size=90';
    document.getElementById('modalFullName').textContent = name + ' ' + lastName;
    document.getElementById('modalCin').textContent = '';
    document.getElementById('modalEmail').textContent = 'Chargement...';
    document.getElementById('modalTel').textContent = '';
    document.getElementById('modalSexe').textContent = '';
    document.getElementById('modalDob').textContent = '';
    document.getElementById('rdvCountBadge').textContent = '...';
    document.getElementById('modalRdvsContainer').innerHTML =
        '<div class="text-center py-4"><div class="spinner-border text-primary" role="status"></div><p class="text-muted mt-2 mb-0">Chargement des données...</p></div>';
    patientModal.show();

    fetch(DETAIL_URL.replace('__ID__', id))
        .then(r => r.json())
        .then(data => {
            if (data.error) { alert(data.error); return; }

            // Avatar
            if (data.image) {
                document.getElementById('modalAvatar').src = '/' + data.image;
            }

            // Patient info
            document.getElementById('modalFullName').textContent = data.name + ' ' + data.lastName;
            document.getElementById('modalCin').textContent = 'CIN : ' + (data.cin || '—');
            document.getElementById('modalEmail').textContent = data.email || '—';
            document.getElementById('modalTel').textContent = data.tel || '—';
            document.getElementById('modalSexe').textContent = data.sexe === 'M' ? 'Masculin' : 'Féminin';
            document.getElementById('modalDob').textContent = data.dateNaissance || '—';

            // RDV count badge
            document.getElementById('rdvCountBadge').textContent = data.rdvs ? data.rdvs.length : 0;

            // RDV cards
            if (!data.rdvs || data.rdvs.length === 0) {
                document.getElementById('modalRdvsContainer').innerHTML =
                    '<div class="text-center py-4"><i class="bi bi-calendar-x fs-1 text-muted d-block mb-2"></i><p class="text-muted mb-0">Aucun rendez-vous avec ce patient.</p></div>';
                return;
            }

            let html = '';
            data.rdvs.forEach(function (r, idx) {
                let badge = '';
                let cardClass = '';
                let icon = '';
                if (r.etat === 'validé') {
                    badge = '<span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>Validé</span>';
                    cardClass = 'rdv-card-valide';
                    icon = 'bi-check-circle-fill text-success';
                } else if (r.etat === 'refusé') {
                    badge = '<span class="badge bg-danger"><i class="bi bi-x-circle me-1"></i>Refusé</span>';
                    cardClass = 'rdv-card-refuse';
                    icon = 'bi-x-circle-fill text-danger';
                } else {
                    badge = '<span class="badge bg-warning text-dark"><i class="bi bi-hourglass-split me-1"></i>En attente</span>';
                    cardClass = 'rdv-card-attente';
                    icon = 'bi-hourglass-split text-warning';
                }

                html += '<div class="card rdv-card ' + cardClass + ' mb-2 p-3">';
                html += '  <div class="d-flex justify-content-between align-items-start">';
                html += '    <div class="d-flex align-items-center gap-3">';
                html += '      <div class="text-center" style="min-width:44px;"><i class="bi ' + icon + ' fs-4"></i></div>';
                html += '      <div>';
                html += '        <div class="rdv-date"><i class="bi bi-calendar3 me-1"></i>' + r.date + '</div>';
                html += '        <div class="rdv-motif mt-1">' + (r.motif || '<em class="text-muted">Pas de motif</em>') + '</div>';
                html += '      </div>';
                html += '    </div>';
                html += '    <div>' + badge + '</div>';
                html += '  </div>';
                html += '</div>';
            });

            document.getElementById('modalRdvsContainer').innerHTML = html;
        })
        .catch(function () {
            document.getElementById('modalRdvsContainer').innerHTML =
                '<div class="text-center py-3"><i class="bi bi-exclamation-triangle fs-2 text-danger d-block mb-2"></i><p class="text-danger mb-0">Erreur de chargement.</p></div>';
        });
}

// Dynamic client-side filter
(function () {
    const input = document.getElementById('searchInput');
    const rows = document.querySelectorAll('#patientsTable tbody tr.patient-row');
    const noResults = document.getElementById('noResults');
    const countBadge = document.getElementById('countBadge');

    input.addEventListener('input', function () {
        const query = this.value.trim().toLowerCase();
        let visible = 0;
        rows.forEach(function (row) {
            const search = row.getAttribute('data-search') || '';
            if (!query || search.includes(query)) {
                row.style.display = '';
                visible++;
            } else {
                row.style.display = 'none';
            }
        });
        countBadge.textContent = visible;
        noResults.classList.toggle('d-none', visible > 0 || !query);
    });
})();
</script>
{% endblock %}