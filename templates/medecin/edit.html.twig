{% extends 'dashboard/layout.html.twig' %}

{% block title %}Modifier médecin{% endblock %}

{% block sidebar %}
    {% include 'dashboard/admin/_sidebar.html.twig' %}
{% endblock %}

{% block dashboard_content %}
<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h2 class="fw-bold mb-0"><i class="bi bi-pencil-square text-warning me-2"></i>Modifier médecin</h2>
        <p class="text-muted mb-0">Modifier les informations du médecin</p>
    </div>
    <div class="d-flex gap-2">
        <a href="{{ path('medecin_show', {'id': medecin.id}) }}" class="btn btn-outline-primary">
            <i class="bi bi-eye me-1"></i>Voir
        </a>
        <a href="{{ path('medecin_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Retour
        </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-7">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white fw-semibold py-3">
                <i class="bi bi-card-list me-1"></i>Informations du médecin
            </div>
            <div class="card-body p-4">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                    <div class="mb-3">
                        {{ form_label(form.dateEmbauche, 'Date d\'embauche', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                        {{ form_widget(form.dateEmbauche, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.dateEmbauche) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.profile, 'Profil associé', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                        {{ form_widget(form.profile, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.profile) }}
                    </div>
                    <div class="mb-4">
                        {{ form_label(form.specialite, 'Spécialité', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                        {{ form_widget(form.specialite, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.specialite) }}
                    </div>
                    <div class="d-flex gap-2">
                        <button class="btn btn-warning px-4">
                            <i class="bi bi-check-lg me-1"></i>Enregistrer
                        </button>
                        <a href="{{ path('medecin_index') }}" class="btn btn-outline-secondary">Annuler</a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>

        <div class="card shadow-sm border-0 mt-3 border-danger">
            <div class="card-body d-flex align-items-center justify-content-between py-3">
                <div>
                    <span class="fw-semibold text-danger"><i class="bi bi-exclamation-triangle me-1"></i>Zone de danger</span>
                    <p class="mb-0 text-muted small">Cette action est irréversible.</p>
                </div>
                <form method="post" action="{{ path('medecin_delete', {'id': medecin.id}) }}" onsubmit="return confirm('Supprimer définitivement ce médecin ?')">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ medecin.id) }}">
                    <button class="btn btn-outline-danger btn-sm">
                        <i class="bi bi-trash me-1"></i>Supprimer
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
